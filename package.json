{
  "name": "the-shortest-url",
  "version": "1.0.0",
  "description": "A url shortening service written in Node using the express framework",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:unit": "jest ^(.*/)*(.*\\.)*(unit.test)\\.ts$",
    "test:integration": "jest ^(.*/)*(.*\\.)*(int.test)\\.ts$",
    "test:api": "jest ^(.*/)*(.*\\.)*(api.test)\\.ts$",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adellanno/the-shortest-url.git"
  },
  "author": "Anthony Dell'Anno",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adellanno/the-shortest-url/issues"
  },
  "homepage": "https://github.com/adellanno/the-shortest-url#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@types/valid-url": "^1.0.3",
    "@types/validator": "^13.7.10",
    "concurrently": "^7.6.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
